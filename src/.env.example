# Database Configuration
DATABASE_URL="postgresql://user:password@localhost:5432/database_name"

# Redis Configuration (for OTP storage)
REDIS_URL="redis://localhost:6379"

# SMTP Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@example.com
SMTP_PASS=your-email-password
SMTP_FROM=noreply@example.com

# Security Configuration
NODE_ENV=development
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001  # Comma-separated list of allowed origins for CORS

# JWT Configuration
JWT_SECRET=your-secret-key
JWT_EXPIRES_IN=1h

# Rate Limiting Configuration
GLOBAL_RATE_LIMIT_WINDOW_S=900  # 15 minutes
GLOBAL_RATE_LIMIT_MAX=100      # 100 requests per IP
AUTH_RATE_LIMIT_WINDOW_S=3600  # 1 hour
AUTH_RATE_LIMIT_MAX=10         # 10 requests per IP per hour